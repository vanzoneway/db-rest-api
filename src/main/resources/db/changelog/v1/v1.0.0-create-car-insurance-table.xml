<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="20250908130500" author="vanz.evergarden0@gmail.com">
        <createTable tableName="car_insurance">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="insurance_company" type="VARCHAR(255)"/>
            <column name="expiration_period" type="DATE"/>
            <column name="coverage_terms" type="CHAR(255)"/>
            <column name="insurance_premium" type="DOUBLE PRECISION"/>
            <column name="car_id" type="BIGINT">
                <constraints unique="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="car_insurance"
                baseColumnNames="car_id"
                constraintName="fk_car_insurance_car"
                referencedTableName="car"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>