<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="20250908132500" author="vanz.evergarden0@gmail.com">
        <createTable tableName="bonus_passenger">
            <column name="bonus_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="passenger_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                tableName="bonus_passenger"
                columnNames="bonus_id, passenger_id"
                constraintName="pk_bonus_passenger"/>

        <addForeignKeyConstraint
                baseTableName="bonus_passenger"
                baseColumnNames="bonus_id"
                constraintName="fk_bonus_passenger_bonus"
                referencedTableName="bonus"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="bonus_passenger"
                baseColumnNames="passenger_id"
                constraintName="fk_bonus_passenger_passenger"
                referencedTableName="passenger"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>