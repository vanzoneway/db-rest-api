<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="20250908131500" author="vanz.evergarden0@gmail.com">
        <createTable tableName="rides">
            <column name="passenger_id" type="BIGINT"/>
            <column name="driver_id" type="BIGINT"/>
            <column name="departure_address" type="VARCHAR(255)"/>
            <column name="destination_address" type="VARCHAR(255)"/>
            <column name="cost" type="DOUBLE PRECISION"/>
            <column name="creation_date" type="TIMESTAMP WITHOUT TIME ZONE"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="rides"
                baseColumnNames="passenger_id"
                constraintName="fk_rides_passenger"
                referencedTableName="passenger"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="rides"
                baseColumnNames="driver_id"
                constraintName="fk_rides_driver"
                referencedTableName="driver"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>