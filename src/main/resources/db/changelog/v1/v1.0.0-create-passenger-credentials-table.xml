<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="20250908122500" author="vanz.evergarden0@gmail.com">
        <createTable tableName="passenger_credentials">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="card_number" type="VARCHAR(32)"/>
            <column name="holder_name" type="VARCHAR(255)"/>
            <column name="expiration_date" type="DATE"/>
            <column name="iban" type="VARCHAR(255)"/>
            <column name="passenger_id" type="BIGINT">
                <constraints unique="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="passenger_credentials"
                baseColumnNames="passenger_id"
                constraintName="fk_passenger_credentials_passenger"
                referencedTableName="passenger"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>